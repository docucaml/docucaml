{
  "name": "test",
  "version": "0.1.0",
  "description": "OCaml workflow with Esy",
  "license": "MIT",
  "esy": {
    "build": "dune build #{self.name}.exe",
    "release": {
      "bin": "test",
      "includePackages": [
        "root",
        "@opam/camomile"
      ]
    },
    "buildEnv": {
      "PKG_CONFIG_PATH": "/usr/lib/x86_64-linux-gnu/pkgconfig:/usr/lib/pkgconfig:/usr/share/pkgconfig"
    }
  },
  "scripts": {
    "test": "esy x hello"
  },
  "dependencies": {
    "ocaml": "~4.8.0"
  },
  "devDependencies": {
    "ocaml": "~4.8.0"
  },
  "resolutions": {
    "yarn-pkg-config": "bluddy/yarn-pkg-config#34947ac97f898c8a94b1731df45aea16f8fc7b3c"
  }
}

